<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	   xmlns:android="http://schemas.android.com/apk/res/android" 
	   android:orientation="vertical" 	   	   
	   android:id="@+id/bg" 
	   android:layout_width="fill_parent"	   
	   android:layout_height="fill_parent">
	
	<TextView        
	    android:id="@+id/ossName"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
       	android:layout_gravity="center" 
       	android:textColor="#aaa"
       	android:textSize="@dimen/title_text_size"
       	android:padding="10dip"
       	android:text="@string/title" /> 
  		<LinearLayout
  				android:layout_width="fill_parent"  		
  				android:layout_height="2px"
  				android:background="@color/twit"
  				android:orientation="vertical"/>   
  				
				<RelativeLayout	   
				   android:orientation="vertical" 
				   android:padding="32dip"	     
				   android:layout_width="fill_parent" 
				   android:layout_height="fill_parent">
			 
				  <LinearLayout 
				     android:id="@+id/buttons"
				     android:orientation="horizontal" 
				     android:layout_width="fill_parent" 
				     android:layout_height="@dimen/button_height"	     
				     android:layout_alignParentBottom="true">
				    <Button 
				       android:id="@+id/login_request"
				       android:background="@drawable/button_selector"
				       android:textColor="@drawable/title_selector"
				       android:layout_width="fill_parent" 
				       android:layout_height="@dimen/button_height" 
				       android:layout_weight="1"
				       android:layout_marginRight="5dip"
				       android:text="Нэвтрэх"
				       android:textSize="@dimen/button_text_size"
				       android:tag="login_request" />    
				    <Button 
				       android:id="@+id/main_exit"
				       android:background="@drawable/button_selector"
					   android:textColor="@drawable/title_selector"				       
				       android:layout_width="fill_parent" 
				       android:layout_height="@dimen/button_height" 
				       android:layout_weight="1"
				       android:layout_marginLeft="5dip"				       
				       android:text="Гарах"
				       android:textSize="@dimen/button_text_size"
				       android:tag="main_exit" />    
				  </LinearLayout>    
				       	
				  <LinearLayout      
				     android:orientation="vertical" 
				     android:padding="15dip"
				     android:layout_width="fill_parent" 
				     android:layout_height="wrap_content">           
					    <TextView 
						     android:id="@+id/textview1"
							 android:layout_gravity="center"
							 android:padding="5dip"
							 android:textSize="@dimen/tanii_kod_text_size"
						     android:layout_width="wrap_content" 
						     android:layout_height="wrap_content"   
						     android:textColor="#ffffff"	       		     
						     android:text="Таны код"/> 
					    <EditText 
						     android:id="@+id/login_user"
						     android:text=""
						     android:maxLength="3"	     
						     android:inputType="phone"
						     android:layout_gravity="center" 
						     android:gravity="center_horizontal"  
						     android:textSize="@dimen/login_user_text_size"
						     android:background="@drawable/text_selector"
						     android:layout_width="@dimen/login_user_text_width"
						     android:imeOptions="actionDone"
						     android:padding="10dip"	     
						     android:layout_height="wrap_content"/>
					     <TextView 
						     android:id="@+id/textview2"	     
						     android:padding="10dip"
						     android:paddingTop="30dip"
						     android:layout_gravity="center"
						     android:layout_width="wrap_content" 
						     android:layout_height="wrap_content"
						     android:textColor="#ffffff"      
						     android:text="Нууц дугаар" />    
					    <EditText 
						     android:id="@+id/login_code"
						     android:text=""	
						     android:layout_gravity="center"     
						     android:maxLength="4"						     
						     android:textSize="@dimen/login_pass_text_size"
						     android:imeOptions="actionDone"
						     android:padding="10dip"
						     android:inputType="phone"
						     android:background="@drawable/text_selector"
						     android:password="true"
						     android:layout_width="90dip"	     
						     android:layout_height="wrap_content"/>
				  </LinearLayout>  
		     
		</RelativeLayout>
</LinearLayout>